@model MVCHotel.Models.Apartar

<br />
<br />
<br />

<h1>Crear Reserva</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="idProducto" />
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="fechaCompra" class="control-label"></label>
        <input asp-for="fechaCompra" class="form-control" />
        <span asp-validation-for="fechaCompra" class="text-danger"> </span>
    </div>


    <div class="form-group">
        <label asp-for="cantidad" class="control-label"></label>
        <input asp-for="cantidad" class="form-control" />
        <span asp-validation-for="cantidad" class="text-danger"> </span>
    </div>

    <div class="form-group">
        @* tiene un caracter invisible *@
        <label asp-for="idProducto" class="control-label">‎ </label> 
        <input asp-for="idProducto" class="form-control" type="hidden" />
        <span asp-validation-for="idProducto" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <input type="submit" value="Comprar" class="btn" style="background-color: #f41414; color: #fff; padding: 5px; border-radius: 5px;" />
    </div>
</form>