@model IEnumerable<MVCHotel.Models.Apartar>

@{
    ViewData["Title"] = "Carrito";
}

<br /><br />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.producto.idProducto)
                </td>
                
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Ir atrás</a>
</div>
