@model MVCHotel.Models.Producto


@{
    ViewData["Title"] = "Detalles del Producto";
}

<br />
<br />

<div>
    <hr />
    <dl class="row">


        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombreProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombreProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descripcionProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descripcionProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cantidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.imagen)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Action("GetImage", new {id = Model.idProducto})" width="100" height="100"  class="img-fluid" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.precioProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.precioProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.categoriaProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoriaProducto.nombre)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.idProducto">Editar</a> |
    <a asp-action="Index">Ir atrás</a>
</div>
